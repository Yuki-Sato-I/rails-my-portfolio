<div class=containers>
  <%= image_tag "background.jpg" %>
  <h1 class="title">Welcome to Yuki's PortFolio</h1>
  <div class="contents">
    <div class="choices">
      <div class="btn-wrapper">
        <%= link_to "About", "#" ,class: "btn1" %>
        <%= link_to "Productions", "#" ,class: "btn1" %>
        <%= link_to "Blog", "#" ,class: "btn1" %>
        <%= link_to "Contact", "#" ,class: "btn1" %>
      </div>
    </div>
    <div class="myprof">
      <div class="profile">
        <%= image_tag "no_image.jpg" %>
        <p>I'm a Japanese student.I study and study everyday.</p>
      </div>
      <div class="text">
        <p>Hello World!!</p>
      </div>
    </div>
  </div>
</div>
<script>
$(function () {
	$('.title').textillate({
		// ループ
		loop: true,
		// 間隔時間
		minDisplayTime: 8000,
		// 遅延時間
		initialDelay: 0,
		// 自動スタート
		autoStart: true,
		// アニメーションの開始オプション
		in: {
			// エフェクト
			effect: 'rollIn',
			// 遅延時間の指数
			delayScale: 1.5,
			// 文字の遅延時間
			delay: 200,
			// アニメーションを同時実行
			sync: false,
			// アニメーションをランダム実行
			shuffle: false,
			// アニメーションをリバース実行
			reverse: false
		},
		// アニメーションの終了オプション
		out: {
			// エフェクト
			effect: 'rollOut',
			// 遅延時間の指数
			delayScale: 1.5,
			// 文字の遅延時間
			delay: 200,
			// アニメーションを同時実行
			sync: false,
			// アニメーションをランダム実行
			shuffle: false,
			// アニメーションをリバース実行
			reverse: false
		}
	});
});
</script>